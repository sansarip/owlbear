{
  "name": "owlbear",
  "lint": "eslint src --ext ts",
  "displayName": "Owlbear",
  "description": "Support paredit-like features for HTML/JSX",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:owlbear.htmlForwardBarf",
    "onCommand:owlbear.htmlForwardSlurp"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "owlbear.htmlForwardBarf",
        "title": "Owlbear: HTML Forwarf Barf"
      },
      {
        "command": "owlbear.htmlForwardSlurp",
        "title": "Owlbear: HTML Forward Slurp"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "clean": "rimraf ./out && rimraf ./tsconfig.tsbuildinfo && rimraf ./cljs-out",
    "compile-cljs": "npx shadow-cljs release :lib :test",
    "cljs-repl": "node -e \"require('./out/cljs/owlbear.js')\"",
    "cljs-test": "node ./out/cljs/owlbear-tests.js",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "rimraf": "^3.0.2",
    "shadow-cljs": "^2.16.12",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.4",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "web-tree-sitter": "^0.20.3"
  }
}
